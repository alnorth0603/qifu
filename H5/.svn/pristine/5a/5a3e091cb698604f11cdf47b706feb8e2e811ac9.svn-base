.page {
	background-color: #FFFFFF;
}

.page .mainSearchIco {
	position: fixed;
	background: url(../img/main_search_icon.png) center no-repeat;
	background-size: contain;
	bottom: 5%;
	width: 3rem;
	height: 3rem;
	right: 10%;
    z-index: 2;
}

.page .bar-top {
	height: 3rem;
	background-color: #FAFAFA;
	padding: 0;
	border: 0;
}

.page .bar-top .title {
	height: 3rem;
	line-height: 3rem;
}

.page .bar-top .icon-user {
	background: url(../img/icon_user.png) 0px 0px no-repeat;
	background-size: 100% 100%;
	height: 1.2rem;
	width: 1.2rem;
	margin-top: 1rem;
	margin-left: .5rem;
}

.page .bar-top .icon-search1 {
	background: url(../img/icon_search1.png) 0px 0px no-repeat;
	background-size: 100% 100%;
	height: 1.2rem;
	width: 1.2rem;
	margin-top: 1rem;
	margin-left: .5rem;
}

.page .bar-top .searchbar {
	height: 3rem;
	padding: 0;
	margin-right: .5rem;
	background: transparent;
}

.page .bar-top .search-input {
	margin-top: .8rem;
}

.page .bar-top .searchbar .search-input input {
	background: url(../img/serch_inputBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
	height: 1.5rem;
	padding-left: .6rem;
	padding-right: 1.6rem;
}

.page .bar-top .searchbar .icon-search2 {
	background: url(../img/icon_search2.png) 0px 0px no-repeat;
	background-size: 100% 100%;
	height: 1rem;
	width: 1rem;
	right: .3rem;
	left: initial;
}

.page .bar-top .searchbar .button.button-fill {
	color: #D71516;
	background: #fafafa;
	top: 1rem;
	font-size: .8rem;
	font-weight: bold;
}

.page .bar-top .swiper-container {
	height: 3rem;
	padding: 0;
	line-height: 3rem;
	margin-right: .5rem;
	background-color: #FAFAFA;
}

.page .bar-top .swiper-wrapper {
	background-color: #FAFAFA;
}

.page .bar-top .swiper-slide {
	font-size: .8rem;
	text-align: center;
	display: -webkit-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	-webkit-align-items: center;
	align-items: center;
	width: 22%;
	border: 0;
	top: .6rem;
}

.page .bar-top .swiper-slide.active {
	color: #D71516;
}

.page .bar-top .centerTip {
	position: relative;
	background: url(../img/main_shape.png) center top repeat-x;
	background-size: contain;
	z-index: 1;
}

.page .bar-top .centerTip>div {
	width: 1.5rem;
	height: 1.5rem;
	display: inline-block;
	margin-top: -.5rem;
}

.page .bar-top .centerTip.activityBG>div {
	background: url(../img/bar_activityBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .bar-top .centerTip.couponBG>div {
	background: url(../img/bar_couponBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .bar-top .centerTip.finefoodBG>div {
	background: url(../img/bar_foodBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .bar-top .centerTip.yuleBG>div {
	background: url(../img/bar_yuleBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .bar-top .centerTip.vrRoomBG>div {
	background: url(../img/bar_vrRoomBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .bar-top .centerTip.shopBG>div {
	background: url(../img/bar_shopBG.png) 0px 0px no-repeat;
	background-size: 100% 100%;
}

.page .content-block {
	padding: 0;
	margin: 0;
	padding-top: .5rem;
}

.page .list-block.media-list {
	margin-top: 1rem;
}

.page .content-block ul,
.page .content-block .item-inner {
	border: 0;
}

.page .content-block .list-block .item-inner {
	width: 100%;
	margin: auto;
	margin-bottom: .5rem;
	position: relative;
	padding: 0;
	margin-right: .5rem;
	margin-left: .5rem;
}

.page .content-block .item-shadowImg {
	border-radius: 3px;
	-webkit-box-shadow: 3px 3px 3px rgba(196, 196, 196, .4);
	-moz-box-shadow: 3px 3px 3px rgba(196, 196, 196, .4);
	box-shadow: 3px 3px 3px rgba(196, 196, 196, .4);
}

.page .content-block .item-bottom {
	position: absolute;
	bottom: 0;
	left: 0;
	height: 3rem;
	width: 100%;
	overflow: hidden;
}

.page .content-block .item-maskBG {
	position: absolute;
	bottom: 0;
	left: 0;
	background-color: #000000;
	height: 3rem;
	width: 100%;
	opacity: 0.5;
	z-index: 1;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
}

.page .content-block .item-bottom .icon-itemTip {
	height: 3rem;
	width: 3rem;
	z-index: 2;
	position: relative;
}

.page .content-block .item-bottom .rightDiv {
	color: #A19FAC;
	position: relative;
	z-index: 2;
}

.page .content-block .item-bottom .icon-itemTip>img {
	border-radius: 50%;
	width: 2rem;
	height: 2rem;
	margin-top: .5rem;
	margin-left: .5rem;
}

.page .content-block .item-bottom .rightDiv .itemTxt1 {
	font-size: .8rem;
	color: #ffffff;
}


/*美食汇*/
#finefoodTab .item-inner .item-bottom .rightDiv {
	margin-top: 3%;
}
/*购物达人*/
#shopTab .item-inner .item-bottom .rightDiv {
	margin-top: 3%;
}
/*购物达人*/
#shopTab .item-inner .item-bottom .rightDiv {
	margin-top: 3%;
}

/*娱乐天地*/
#yuleTab .item-inner .rightDiv {
    margin-left: 5%;
    margin-top: 3%;
}

#couponTab .item-content .item-inner {
	background: url(../img/coupon_get.png) center center no-repeat;
	background-size: 100% 100%;
	color: #BDBDBD;
	padding-right: 25%;
	padding-left: .5rem;
}

#couponTab .item-inner .coupon0-txt,
#couponTab .item-inner .coupon1-txt {
	color: #ff6600;
	font-weight: bold;
}

#couponTab .coupon0-txt .cou-par {
	font-size: 1.3rem;
	padding-right: .2rem;
	padding-left: .2rem;
}

#couponTab .coupon1-txt .cou-par {
	font-size: 1.3rem;
	padding-right: 0;
	padding-left: .5rem;
}

#couponTab .coupon1-txt .cou-name {
	font-size: 1rem;
}

#couponTab .item-inner .cou-quota {
	color: #BDBDBD;
	font-weight: normal;
}

#couponTab .item-inner .time-txt {
	color: #1D313B;
}


/*筛选*/

#serach-page {
	background-color: #FFFFFF;
	height: 100%;
}

#serach-page .bar-nav {
	background-color: #FAFAFA;
	font-weight: bold;
}

#serach-page .bar-nav .btnDiv {
	line-height: 2.2rem;
	color: #D71516;
	position: relative;
	z-index: 1;
}

#serach-page .bar-nav .title {
	font-weight: bold;
	font-size: 1rem;
}

#serach-page .serach-list {
	padding-right: .5rem;
	padding-left: .5rem;
}

#serach-page .item-list .button {
	margin-bottom: .5rem;
    overflow: hidden;
    font-size: .7rem;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0;
    text-align: center;
}

#serach-page .item-list .item-color {
	color: #79A5A6;
	border: 1px solid #79A5A6;
}

#serach-page .serach-item {
	margin-bottom: .8rem;
}

#serach-page .item-title {
	font-weight: bold;
	margin: .5rem 0 .3rem;
}

.button.button-middle.active {
	color: #FFFFFF !important;
	background-color: #000000 !important;
	border: 1px solid #000000 !important;
}