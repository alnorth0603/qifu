.page{
    background-color:#FFFFFF;
}
.page .bar-top{
    height: 3rem;
    background-color:#FAFAFA;
    padding: 0;
    border: 0;
}
.page .bar-top .title{
    height: 3rem;
    line-height: 3rem;
}
.page .bar-top .icon-user{
    background: url(../img/icon_user.png) 0px 0px no-repeat;
    background-size: 100% 100%;
    height: 1.2rem;
    width: 1.2rem;
    margin-top: 1rem;
    margin-left:.5rem;
}
.page .bar-top .icon-search1 {
    background: url(../img/icon_search1.png) 0px 0px no-repeat;
    background-size: 100% 100%;
    height: 1.2rem;
    width: 1.2rem;
    margin-top: 1rem;
    margin-left:.5rem;
}
.page .bar-top .searchbar {
    height: 3rem;
    padding: 0;
    margin-right:.5rem;
    background: transparent;
}
.page .bar-top .search-input {
    margin-top: .8rem;
}
.page .bar-top .searchbar .search-input input{
    background: url(../img/serch_inputBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
    height: 1.5rem;
    padding-left: 1.6rem;
}
.page .bar-top .searchbar .icon-search2{
    background: url(../img/icon_search2.png) 0px 0px no-repeat;
    background-size: 100% 100%;
    height: 1rem;
    width: 1rem;
}
.page .bar-top .searchbar .button.button-fill{
    color: #D71516;
    background: #fafafa;
    top: 1rem;
    font-size: .8rem;
    font-weight: bold;
}
.page .bar-top .swiper-container {
    height: 3rem;
    padding: 0;
    line-height:3rem;
    margin-right:.5rem;
}

.page .bar-top .swiper-slide {    
	font-size: .8rem;
    text-align: center;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    width: 22%;
}
.page .bar-top .swiper-slide.active{
	color: #D71516;
}
.page .bar-top .centerTip{
    position: relative;
    background: url(../img/main_shape.png) center top repeat-x;
    background-size: contain;

}
.page .bar-top .centerTip>div{
    width: 1.5rem;
    height: 1.5rem;
    display: inline-block;
    margin-top: -.5rem;
}
.page .bar-top .centerTip.activityBG>div{
    background: url(../img/bar_activityBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
}
.page .bar-top .centerTip.couponBG>div{
    background: url(../img/bar_couponBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
}
.page .bar-top .centerTip.foodBG>div{
    background: url(../img/bar_foodBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
}
.page .bar-top .centerTip.recreBG>div{
    background: url(../img/bar_recreBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
}
.page .bar-top .centerTip.shopBG>div{
    background: url(../img/bar_shopBG.png) 0px 0px no-repeat;
    background-size: 100% 100%;
}
.page .list-block ul,
.page .list-block .item-inner{
    border:0; 
}
.page .list-block .item-inner{
    width: 90%;
    margin: auto;
    margin-bottom: .5rem;
}
.page .list-block .item-img{
    border-radius: 5px;
    -webkit-box-shadow: 5px 5px 5px rgba(196, 196, 196, .4);
    -moz-box-shadow: 5px 5px 5px rgba(196, 196, 196, .4);
    box-shadow: 5px 5px 5px rgba(196, 196, 196, .4);
}
.page .list-block .item-bottom{
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #000000;
    height: 3rem;
    width: 100%;
    opacity: 0.5;
}
.page .list-block .item-bottom .icon-itemTip{
    height: 3rem;
    width: 3rem;
}
.page .list-block .item-bottom .rightDiv{    
	font-size: .6rem;
    color: #A19FAC;
}
.page .list-block .item-bottom .rightDiv .s-rtxt1{ 
    font-size: .75rem;
    color: #FFFFFF;
}
/*精彩活动*/